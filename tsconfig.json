{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*": ["*"]
    },
    "outDir": "./inventario_memoria/dist",
  },
  "include": ["inventario_memoria/**/*.ts"] // Inclui apenas arquivos .ts na pasta inventario-memoria
}